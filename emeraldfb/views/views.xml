<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	
	<!-- Employee Form -->
	<record id="emeraldfb_employee_form_view" model="ir.ui.view">
		<field name="name">hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="priority" eval="7" />
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
			<field name="address_home_id" position="replace">
				<field name="address_home_id" context="{'show_address': 1}" options='{"always_reload": True, "highlight_first_line": True}' invisible="1"/>
			</field>
			<field name="address_home_id" position="after">
				<field name="address_home"/>
			</field>
			<xpath expr="//page[@name='personal_information']" position="inside">
				<group string="Next of Kin" col="2">
					<field name="next_of_kin"/>
					<field name="nok_address"/>
					<field name="nok_phone"/>
				</group>
				<group string="Guarantor 1" col="2">
					<field name="guarantor1_name"/>
					<field name="guarantor1_address"/>
					<field name="guarantor1_phone"/>
				</group>
				<group string="Guarantor 2" col="2">
					<field name="guarantor2_name"/>
					<field name="guarantor2_address"/>
					<field name="guarantor2_phone"/>
				</group>
			</xpath>
			<field name="work_phone" position="after">
					<field name="highest_level_of_education"/>
			</field>
		</field>
	</record>

	<!-- Training Tracker action-->
    <record model="ir.actions.act_window" id="emeraldfb_training_tracker_action">
		<field name="name">Training Tracker</field>
		<field name="res_model">emeraldfb.training.tracker</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="domain">[]</field>
		<field name="context">{}</field>
	</record>
	
	<!-- Staff Recruitment action-->
    <record model="ir.actions.act_window" id="staff_recruitment_action">
		<field name="name">Staff Recruitment</field>
		<field name="res_model">staff.recruitment</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="domain">[]</field>
		<field name="context">{}</field>
	</record>
	
	<!-- Customer Request Actiom -->
	<record model="ir.actions.act_window" id="CustomerRequest_action_window">
      <field name="name">Customer Request</field>
      <field name="res_model">customer.request</field>
      <field name="domain">[('customer', '=', True)]</field>
      <field name="view_mode">tree,form</field>
    </record>
	
	 <!-- training tracker -->
    <record model="ir.ui.view" id="emerald_training_tracker_tree_view">
		<field name="name">emeraldfb.training.tracker.tree</field>
		<field name="model">emeraldfb.training.tracker</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree>
				<field name="employee_id"/>
				<field name="provider"/>
				<field name="training_start_date"/>
				<field name="training_date_end"/>
			</tree>
		</field>
	</record>
	
	<record model="ir.ui.view" id="ninas_training_tracker_form_view">
		<field name="name">emeraldfb.training.tracker.form</field>
		<field name="model">emeraldfb.training.tracker</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Employee Training Tracker">
				<header>
	        		<button name="button_approve" string="Approve" type="object" class="btn btn-primary" states="new" groups="hr.group_hr_manager"/>
	        		<button name="button_reject" string="Reject" type="object" class="btn btn-danger" states="new" groups="hr.group_hr_manager"/>
	        		<button name="button_approve_lm" string="Approve" type="object" class="btn btn-primary" states="validate" groups="emeraldfb.group_hr_line_manager"/>
	        		<button name="button_reject" string="Reject" type="object" class="btn btn-danger" states="validate" groups="emeraldfb.group_hr_line_manager"/>
	        		<field name="state" widget="statusbar" statusbar_visible="new,validate,approve,reject" readonly="1"/>
	        	</header>
				<sheet>
					<group col="2" colspan="2">
						<field name="employee_id"/>
					</group>
					<group col="4" colspan="2">
						<field name="position"/>
						<field name="provider"/>
						<field name="training_start_date"/>
						<field name="training_date_end"/>
						<field name="capability" widget="priority"/>
						<field name="review"/>
					</group>
						<strong>Notes</strong><br/>
						<field name="notes" widget="html"/>
				</sheet>
				<div class="oe_chatter">
			             <field name="message_follower_ids" widget="mail_followers"/>
			             <field name="activity_ids" widget="mail_activity"/>
			             <field name="message_ids" widget="mail_thread"/>
			        </div>
			</form>
		</field>
	</record>
	
	<record id="partner_emeraldfb" model="ir.ui.view">
	    <field name="name">partner.emeraldfb</field>
	    <field name="model">res.partner</field>
	    <field name="inherit_id" ref="base.view_partner_form"/>
	    <field name="arch" type="xml">
	    <field name="property_product_pricelist" position="after">
    		<field name="payment_term_id"/>
		</field>
	    </field>
	</record>
	
	<!-- staff recruitment -->
    <record model="ir.ui.view" id="staff_recruitment_tree_view">
		<field name="name">staff.recruitment.tree</field>
		<field name="model">staff.recruitment</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree>
				<field name="employee_id"/>
				<field name="job_id"/>
			</tree>
		</field>
	</record>
	
	<record model="ir.ui.view" id="staff_recruitment_form_view">
		<field name="name">staff.recruitment.form</field>
		<field name="model">staff.recruitment</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Staff Recruitment">
				<header>
					<button name="button_submit" string="Submit Request" type="object" class="btn btn-primary" states="new"/>
	        		<button name="button_approve" string="Approve" type="object" class="btn btn-primary" states="submit"/>
	        		<button name="button_reject" string="Reject" type="object" class="btn btn-danger" states="submit"/>
	        		<button name="button_approve_lm" string="Approve" type="object" class="btn btn-primary" states="approve"/>
	        		<field name="state" widget="statusbar" statusbar_visible="new,submit,approve,validate,reject" readonly="1"/>
	        	</header>
				<sheet>
					<group col="2" colspan="2">
						<field name="employee_id"/>
					</group>
					<group col="4" colspan="2">
						<field name="job_id"/>
						<field name="priority" widget="priority"/>
					</group>
						<strong>Reason For Request</strong><br/>
						<field name="reason" widget="html"/>
				</sheet>
				<div class="oe_chatter">
			             <field name="message_follower_ids" widget="mail_followers"/>
			             <field name="activity_ids" widget="mail_activity"/>
			             <field name="message_ids" widget="mail_thread"/>
			        </div>
			</form>
		</field>
	</record>
	
	<!-- customer request -->
	<record id="customer_request_form" model="ir.ui.view">
	    <field name="name">customer.request.form</field>
	    <field name="model">customer.request</field>
	    <field name="priority" eval="2"/>
	    <field name="arch" type="xml">
	        <form string="Partners">
	   	<header>
			<button name="button_submit" states="draft" string="Submit" type="object" />
			<button name="button_approve" states="submit" string="Approve" type="object" groups="emeraldfb.group_customer_creation"/>
			<button name="button_reject" states="submit" string="Reject" type="object" groups="emeraldfb.group_customer_creation"/>
			<button name="button_reset" states="reject" string="Set to Draft" type="object" />
			<field name="state" widget="statusbar" statusbar_visible="draft,submit,approve" readonly="1"/>
	    </header>
	        <sheet>
	            <field name="image" widget='image' class="oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
	            <div class="oe_title">
	                <field name="is_company" invisible="1"/>
	                <field name="company_type" widget="radio"
	                    class="oe_edit_only"
	                    options="{'horizontal': true}"/>
	                <h1>
	                    <field name="name" default_focus="1" placeholder="Name" attrs="{'required' : [('type', '=', 'contact')]}"/>
	                </h1>
	                <div class="o_row">
	                    <field name="parent_id"
	                        placeholder="Company"
	                        domain="[('is_company', '=', True)]" context="{'default_is_company': True, 'default_supplier': supplier, 'default_customer': customer}"
	                        attrs="{'invisible': ['|', '&amp;', ('is_company','=', True),('parent_id', '=', False),('company_name', '!=', False),('company_name', '!=', '')]}"/>
	                        <field name="company_name" attrs="{'invisible': ['|', '|', ('company_name', '=', False), ('company_name', '=', ''), ('is_company', '=', True)]}"/>
	                        <button name="create_company" type="object" string="Create company" class="btn btn-sm oe_edit_only fa fa-external-link btn btn-link " attrs="{'invisible': ['|', '|', ('is_company','=', True), ('company_name', '=', ''), ('company_name', '=', False)]}"/>
	                </div>
	            </div>
	            <group>
	            
	                <group>
	                    <field name="type" attrs="{'invisible': [('parent_id','=', False)]}" groups="base.group_no_one"/>
	                    <label for="street" string="Address"/>
	                    <div class="o_address_format">
	                        <div class="oe_edit_only">
	                            <button name="open_parent" type="object" string="(edit)" class="oe_link"
	                                attrs="{'invisible': ['|', ('parent_id', '=', False), ('type', '!=', 'contact')]}"/>
	                        </div>
	                        <field name="street" placeholder="Street..." class="o_address_street"
	                            attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" required="1"/>
	                        <field name="street2" placeholder="Street 2..." class="o_address_street"
	                            attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
	                        <field name="city" placeholder="City" class="o_address_city"
	                            attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" required="1"/>
	                        <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'
	                            attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" context="{'country_id': country_id, 'zip': zip}" required="1"/>
	                        <field name="zip" placeholder="ZIP" class="o_address_zip"
	                            attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
	                        <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'
	                            attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" required="1"/>
	                    </div>
	                    <field name="vat" placeholder="e.g. BE0477472701"/>
	                </group>
	                <group>
	                    <field name="function" placeholder="e.g. Sales Director"
	                        attrs="{'invisible': [('is_company','=', True)]}"/>
	                    <field name="phone" widget="phone" required="1"/>
	                    <field name="mobile" widget="phone"/>
	                    <field name="email" widget="email" context="{'gravatar_image': True}" attrs="{'required': [('is_company', '=', True)]}"/>
	                    <field name="payment_term_id" attrs="{'required': [('is_company', '=', True)]}"/>
	                    <field name="user_id"/>
	                    <field name="property_product_pricelist"/>
	                    <field name="company_id" groups="base.group_system"/>
	                    <field name="customer" invisible="1"/>
	                    <field name="supplier" invisible="1"/>
	                </group>
	            </group>
	        </sheet>
	        <div class="oe_chatter">
	             <field name="message_follower_ids" widget="mail_followers"/>
	             <field name="activity_ids" widget="mail_activity"/>
	             <field name="message_ids" widget="mail_thread"/>
	        </div>
	        </form>
	    </field>
    </record>
	
	<record id="partner_netcom" model="ir.ui.view">
	    <field name="name">partner.netcom</field>
	    <field name="model">res.partner</field>
	    <field name="inherit_id" ref="base.view_partner_form"/>
	    <field name="arch" type="xml">
   			<field name="user_id" position="replace">
	    		<field name="user_id" invisible="1"/>
			</field>
			<field name="property_product_pricelist" position="replace">
	    		<field name="property_product_pricelist" invisible="1"/>
			</field>
		    <field name="website" position="after">
	    		<field name="user_id" />
	    		<field name="property_product_pricelist"/>
			</field>
	    </field>
	</record>
	
	<menuitem name="Employee Training Tracker" id="emeraldfb_training_tracker_menuitem" parent="hr.menu_hr_root" action="emeraldfb_training_tracker_action"/>
	<menuitem name="Staff Recruitment" id="staff_recruitment_menuitem" parent="hr.menu_hr_root" action="staff_recruitment_action"/>
	<menuitem name="Customer Request" id="customer_request" parent="sale.sale_order_menu"
              action="CustomerRequest_action_window"/>
	
	</data>
</odoo>