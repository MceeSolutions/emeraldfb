<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_company_ir_expense" model="ir.ui.view">
            <field name="name">view.company.ir.expense</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="inside">
                    <page string="IR Expense Account">
                        <group>
                            <group>
                                <field name="default_ir_expense_account"/>
                                <field name="default_ir_journal_id"/>
                            </group>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>

    </data>
</odoo>